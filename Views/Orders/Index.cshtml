@model IEnumerable<SpinCycleLaundryHub.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2 class="fw-bold text-primary mb-4">Customer Orders</h2>

<a href="/Orders/Create" class="btn btn-primary mb-3">Create Order</a>

<table class="table table-bordered shadow-sm">
    <thead class="table-warning">
        <tr>
            <th>Customer</th>
            <th>Service</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.CustomerName</td>
                <td>@o.Service?.Name</td>
                <td>â‚±@o.TotalPrice</td>
                <td>
                    <a href="/Orders/Details/@o.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
