@model SpinCycleLaundryHub.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 450px;">
    <div class="card shadow-lg p-4 rounded-4 border-0">
        <h3 class="text-center mb-4 fw-bold text-primary">SpinCycle Laundry Hub</h3>

        <form method="post">
            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control form-control-lg" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100 btn-lg">Login</button>
        </form>
    </div>
</div>
